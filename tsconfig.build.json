{
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.cy.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*"
  ],
  "compilerOptions": {
    "strict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
